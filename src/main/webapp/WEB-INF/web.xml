<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee; http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>College</display-name>
	<welcome-file-list>
		<welcome-file>welcome.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>SelectCollegeServlet</servlet-name>
		<servlet-class>university.controller.SelectCollege</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>SelectCollegeServlet</servlet-name>
		<url-pattern>/SelectCollege</url-pattern>
	</servlet-mapping>
	
	
		<servlet>
		<servlet-name>ViewDetailsServlet</servlet-name>
		<servlet-class>university.controller.ViewDetails</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>ViewDetailsServlet</servlet-name>
		<url-pattern>/ViewDetails</url-pattern>
	</servlet-mapping>
</web-app>